            border-bottom: 1px solid var(--border-color);
        }

        .passenger-header h3 {
            margin-bottom: 0;
        }

        .passenger-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--spacing-lg);
        }

        .step-indicator {
            display: flex;
            justify-content: space-between;
            margin-bottom: var(--spacing-2xl);
        }

        .step {
            flex: 1;
            text-align: center;
