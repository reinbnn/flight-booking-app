        function displayCars() {
            const carsList = document.getElementById('carsList');
            const searchData = JSON.parse(sessionStorage.getItem('carSearch') || '{}');

            // Update search summary
            const summaryDiv = document.getElementById('searchSummary');
            if (Object.keys(searchData).length) {
                const pickupDate = new Date(searchData.pickupDate).toLocaleDateString();
                const dropoffDate = new Date(searchData.dropoffDate).toLocaleDateString();
                summaryDiv.textContent = `${searchData.pickupLocation} | ${pickupDate} to ${dropoffDate}`;
            }

            // Display cars
            mockCars.forEach((car, index) => {
                const carCard = document.createElement('div');
                carCard.className = 'car-card animate-fadeInUp';
                carCard.style.animationDelay = (index * 0.1) + 's';

                carCard.innerHTML = `
                    <div class="car-image">
                        <img src="${car.image}" alt="${car.name}">
                    </div>

                    <div class="car-info">
                        <div>
                            <h3 class="car-name">${car.name}</h3>
                            <span class="car-category">${car.category}</span>

                            <div class="car-specs">
                                <div class="spec-item">
                                    <span class="spec-label"><i class="fas fa-users"></i> Passengers</span>
                                    <span class="spec-value">${car.passengers}</span>
                                </div>
                                <div class="spec-item">
                                    <span class="spec-label"><i class="fas fa-suitcase"></i> Luggage</span>
                                    <span class="spec-value">${car.luggage}</span>
                                </div>
                                <div class="spec-item">
                                    <span class="spec-label"><i class="fas fa-cog"></i> Transmission</span>
                                    <span class="spec-value">${car.transmission}</span>
                                </div>
                            </div>
                        </div>

                        <div class="car-features">
                            ${car.features.map(feature => `<span class="feature-tag">${feature}</span>`).join('')}
                        </div>
                    </div>

                    <div class="car-pricing">
                        <div>
                            <div class="rental-price">$${car.dailyRate}<span style="font-size: 0.8rem; color: #666;"> /day</span></div>
                            <p class="price-info">Total: $${car.totalPrice} (${car.totalDays} days)</p>
                            <p style="color: var(--success-color); font-weight: 600; font-size: 0.9rem; margin-bottom: var(--spacing-lg);">
                                ${car.availability}
                            </p>
                        </div>

                        <button class="btn btn-primary" style="width: 100%;" onclick="selectCar(${car.id}, '${car.name}', ${car.totalPrice})">
                            Book Now
                        </button>
                    </div>
                `;

                carsList.appendChild(carCard);
            });
        }

        function selectCar(carId, carName, price) {
            sessionStorage.setItem('selectedCar', JSON.stringify({
                carId,
                carName,
                price
            }));
            window.location.href = 'car-booking-details.html';
        }

        // Price range filter
        const priceRange = document.getElementById('priceRange');
        if (priceRange) {
            priceRange.addEventListener('input', function() {
                document.getElementById('priceValue').textContent = this.value;
            });
        }

        document.addEventListener('DOMContentLoaded', displayCars);
    </script>
</body>
</html>

