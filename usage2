    <script src="../js/main.js"></script>
    <script>
        let selectedRoomType = 'deluxe';
        let selectedRoomPrice = 250;
        const nightsCount = 3;

        function selectRoom(element, type, price) {
            document.querySelectorAll('.room-option').forEach(el => {
                el.classList.remove('selected');
            });
            element.classList.add('selected');
            selectedRoomType = type;
            selectedRoomPrice = price;
            updateTotal();
        }

        function updateTotal() {
            let total = selectedRoomPrice * nightsCount;
            
            if (document.getElementById('breakfast').checked) total += 15 * nightsCount;
            if (document.getElementById('parking').checked) total += 20 * nightsCount;
            if (document.getElementById('airport').checked) total += 50;
            if (document.getElementById('travel-insurance').checked) total += 25;

            document.getElementById('nightlyRate').textContent = selectedRoomPrice;
            document.getElementById('subtotal').textContent = selectedRoomPrice * nightsCount;
            document.getElementById('hotelTotal').textContent = total;
            document.getElementById('roomTypeDisplay').textContent = selectedRoomType.charAt(0).toUpperCase() + selectedRoomType.slice(1);
        }

        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
            checkbox.addEventListener('change', updateTotal);
        });

        function proceedToHotelPayment() {
            const guestData = {
                firstName: document.getElementById('guestFirstName').value,
                lastName: document.getElementById('guestLastName').value,
                email: document.getElementById('guestEmail').value,
                phone: document.getElementById('guestPhone').value,
                specialRequests: document.getElementById('specialRequests').value,
                roomType: selectedRoomType,
                total: document.getElementById('hotelTotal').textContent
            };

            if (!guestData.firstName || !guestData.lastName || !guestData.email || !guestData.phone) {
                showAlert('Please fill in all guest information', 'warning');
                return;
            }

            sessionStorage.setItem('hotelBookingData', JSON.stringify(guestData));
            window.location.href = 'payment.html';
        }

        document.addEventListener('DOMContentLoaded', updateTotal);
    </script>
</body>
</html>

